<Page x:Class="CulinaryBook.Pages.Authorization"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:CulinaryBook.Pages"
      mc:Ignorable="d" 
      d:DesignHeight="450" d:DesignWidth="800"
      Title="Authorization">

    <Grid>
        <Label x:Name="authLabel" Content="Авторизация" HorizontalAlignment="Center" VerticalAlignment="Top" RenderTransformOrigin="-0.069,-0.056" FontSize="36"/>
        <Label Content="Введите логин" HorizontalAlignment="Center" Margin="0,80,0,0" VerticalAlignment="Top" Foreground="#FFDE1919" Background="#FFFFFCFC" RenderTransformOrigin="0.486,-0.597"/>
        <TextBox x:Name="logTxtBox" HorizontalAlignment="Center" Margin="0,110,0,0" TextWrapping="Wrap" VerticalAlignment="Top" Width="120" RenderTransformOrigin="0.499,0.106"/>
        <Label x:Name="labelPassword" Content="Введите пароль" HorizontalAlignment="Center"  VerticalAlignment="Top" Foreground="#FFF71414" RenderTransformOrigin="-0.214,0.561" Background="White" Margin="0,140,0,0"/>
        <PasswordBox x:Name="passTxtBox" HorizontalAlignment="Center" Margin="0,170,0,0" VerticalAlignment="Top" Width="120" RenderTransformOrigin="0.494,0.427"/>
        <Button x:Name="logBtn" Content="Login" HorizontalAlignment="Center" Margin="0,220,0,0" VerticalAlignment="Top" Width="115" Height="31" Background="#FF6FB71D" RenderTransformOrigin="0.513,-0.099" Click="logBtn_Click" Cursor="Hand"/>
        <Button x:Name="authBtn" Content="Registration" HorizontalAlignment="Center" Margin="0,260,0,0" VerticalAlignment="Top" Width="115" Height="31" Background="#FF6FB71D" RenderTransformOrigin="0.513,-0.099" Click="authBtn_Click" Cursor="Hand"/>
        <Image x:Name="UserPicture" HorizontalAlignment="Left" Height="30" Margin="293,104,0,0" VerticalAlignment="Top" Width="30" Source="/Images/user.png"/>
        <Image x:Name="LockPicture" HorizontalAlignment="Left" Height="30" Margin="293,164,0,0" VerticalAlignment="Top" Width="30" Source="/Images/lock.png"/>

    </Grid>
</Page>
