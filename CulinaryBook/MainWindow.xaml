<Window x:Class="CulinaryBook.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:CulinaryBook"
        mc:Ignorable="d"
        Icon="istockphoto-1185879263-612x612.png"
        Title="Книга рецептов" Height="600" Width="800">
    <Grid>
        <StackPanel RenderTransformOrigin="0.494,0.48">
            <Button x:Name="closeButton" Content="X" Width="36" Background="Snow" BorderBrush="White" Margin="700,0,0,0" FontSize="15" Click="closeButton_Click" Cursor="Hand" MouseEnter="closeButton_Enter" MouseLeave="closeButton_MouseLeave"/>
            <Image Height="100" Source="/istockphoto-1185879263-612x612.png" Stretch="Fill" Width="100"  HorizontalAlignment="Center" />
            <Frame x:Name="FrMain" Height="450" NavigationUIVisibility="Hidden"/>
        </StackPanel>

    </Grid>
</Window>
